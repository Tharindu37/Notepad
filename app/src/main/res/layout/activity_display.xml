<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Display">

  <TextView
      android:id="@+id/txtDisplayTitle"
      android:layout_width="378dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:layout_marginTop="72dp"
      android:layout_marginEnd="16dp"
      android:text="temp Tilesss"

      android:textSize="24sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <TextView
      android:id="@+id/txtDisplayDate"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:layout_marginTop="5dp"
      android:text="2000/3/4"
      android:maxLength="50"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/txtDisplayTitle" />

  <TextView
      android:id="@+id/txtDisplayNote"
      android:layout_width="381dp"
      android:layout_height="562dp"
      android:layout_marginStart="16dp"
      android:layout_marginTop="8dp"
      android:layout_marginEnd="16dp"
      android:text="how are you?"
      android:maxLength="300"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/txtDisplayDate" />

  <ImageButton
      android:id="@+id/btnEdintNote"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="340dp"
      android:layout_marginTop="16dp"
      android:layout_marginEnd="16dp"
      android:backgroundTint="#FFFFFF"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:tint="#008500"
      app:srcCompat="@android:drawable/ic_menu_edit" />

  <ImageButton
      android:id="@+id/btnDeleteNote"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="205dp"
      android:layout_marginTop="16dp"
      android:layout_marginEnd="8dp"
      android:backgroundTint="#FFFFFF"
      app:layout_constraintEnd_toStartOf="@+id/btnEdintNote"
      app:layout_constraintStart_toEndOf="@+id/btnCloseNote"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="@android:drawable/ic_menu_delete"
      app:tint="#FF0000" />

  <ImageButton
      android:id="@+id/btnCloseNote"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:layout_marginTop="16dp"
      android:backgroundTint="#FFFFFF"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:tint="#FF0000"
      app:srcCompat="@android:drawable/ic_menu_close_clear_cancel" />

  <ImageButton
      android:id="@+id/btnShareNote"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="132dp"
      android:layout_marginTop="16dp"
      android:layout_marginEnd="8dp"
      android:backgroundTint="#FFFFFF"
      app:tint="#FF5533"
      app:layout_constraintEnd_toStartOf="@+id/btnDeleteNote"
      app:layout_constraintHorizontal_bias="1.0"
      app:layout_constraintStart_toEndOf="@+id/btnCloseNote"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="@android:drawable/ic_menu_share" />

</androidx.constraintlayout.widget.ConstraintLayout>